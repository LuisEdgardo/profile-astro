---
import SkillItem from "./SkillItem.astro";

const front = [
    { title: "HTML", level: "Basic" },
    { title: "Tailwind", level: "Basic" },
    { title: "React JS", level: "Intermediate" },
    { title: "Svelte JS", level: "Intermediate" },
    { title: "Next JS", level: "Basic" },
    { title: "Astro", level: "Basic" },
]
const back = [
    { title: "MYSQL", level: "Intermediate" },
    { title: "SQL Server", level: "Basic" },
    { title: "Node JS", level: "Intermediate" },
    { title: "Firebase", level: "Basic" },
    { title: "Python", level: "Basic" },
    { title: "PHP", level: "Intermediate" },
]
---
<div class="flex flex-col md:w-4/5  items-center md:mt-10 bg-slate-800 p-10 md:p-20 gap-4 md:rounded-3xl ">
    <div class="w-full flex-col md:flex-row justify-center items-center">
        <h1 class="text-4xl font-bold text-white text-center mb-3">Skills</h1>
        <p class=" text-slate-300 mb-14 text-center">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Distinctio, deleniti.</p>
    </div>

    <div class="flex-1 flex flex-col md:flex-row justify-between gap-10">
        <!-- CARD 1 -->
        <div class="card1 w-80 border-2 rounded-lg p-8 flex flex-col gap-5 border-slate-600  hover:border-sky-400 bg-slate-700">
            <h3 class="font-bold text-center">Frontend developer</h3>
            <div class="grid grid-cols-2 gap-4">
                {
                    front.map(item => (
                    <SkillItem itemTitle={item.title} itemLevel={item.level} />
                    ))
                }

            </div>
        </div>

        <!-- CARD 2 -->
        <div class="card2 w-80 border-2 rounded-lg p-8 flex flex-col gap-5 border-slate-600  hover:border-sky-400 bg-slate-700">
            <h3 class="font-bold text-center">Backend developer</h3>
            <div class="grid grid-cols-2 gap-4">
                {
                    back.map(item => (
                        <SkillItem itemTitle={item.title} itemLevel={item.level} />
                    ))
                }

            </div>
        </div>
        
    </div>


</div>