---
import Header from './Header.astro'
const {pageTitle, pageDescription} = Astro.props

interface Props {
    pageTitle?: string;
    pageDescription?: string
}

---


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={pageDescription}>
    <title>Devlu | {pageTitle}</title>

    <link rel="stylesheet" href="/src/libs/devlu-icon-v1.0/style.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">

</head>
<body class="font-quicksand container mx-auto bg-slate-900 text-slate-300 flex flex-col items-center pb-20">
    <Header/>
    <div class="w-full md:mt-10 flex flex-col items-center">
        <slot/>

    </div>

</body>
</html>